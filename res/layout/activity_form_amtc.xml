<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".FormAmtc">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ebe050"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#243657"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fill in the form below and click the send email button"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your full name: "
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g: AYUSH GOEL"
            android:padding="4dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_round"
            android:layout_marginBottom="10dp"
            android:id="@+id/edit1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your class and section: "
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:hint="e.g: 4CSE3X"
            android:layout_below="@+id/edit1"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="@drawable/bg_round"
            android:layout_marginBottom="10dp"
            android:id="@+id/edit2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your rollno: "
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:hint="e.g.: A2305218122"
            android:layout_below="@+id/edit1"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="@drawable/bg_round"
            android:layout_marginBottom="10dp"
            android:id="@+id/edit3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your course: "
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:hint="e.g.: BTECH (CSE)"
            android:layout_below="@+id/edit1"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="@drawable/bg_round"
            android:layout_marginBottom="10dp"
            android:id="@+id/edit4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Batch: "
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:hint="e.g. : 2018-22"
            android:layout_below="@+id/edit1"
            android:textSize="20dp"
            android:background="@drawable/bg_round"
            android:layout_marginBottom="10dp"
            android:textColor="#000"
            android:id="@+id/edit5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What skills do you have: "
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:hint="e.g. : c++, java, etc."
            android:layout_below="@+id/edit1"
            android:textSize="20dp"
            android:background="@drawable/bg_round"
            android:layout_marginBottom="10dp"
            android:textColor="#000"
            android:id="@+id/edit6"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Why do you want to join our club? "
            android:textSize="20sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="4dp"
            android:gravity="top"
            android:background="@drawable/bg_round"
            android:layout_marginBottom="10dp"
            android:hint="Because.....! (Be very precise and brief) "
            android:layout_below="@+id/edit1"
            android:textSize="20dp"
            android:textColor="#000"
            android:id="@+id/edit7"
            />

        <TextView
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Press the submit button and then send us email.We will get back to you as soon your form is accepted! "
            android:textSize="20sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Send Email"
            android:layout_centerInParent="true"
            android:layout_marginVertical="15dp"
            android:id="@+id/button"
            android:background="#d6c209"
            android:textSize="20sp"/>

    </LinearLayout>
</ScrollView>