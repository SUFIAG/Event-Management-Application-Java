<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf8de"
    tools:context=".AmtcUpEventsDisp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/maineventImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/event_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHighlight="#000"
            android:text="EventTitle"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@drawable/bg_round"
            android:text="DAY AND DATE: "
            android:layout_marginHorizontal="5dp"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/event_daydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="DAY"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/bg_round"
            android:text="TIMINGS: "
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tvevent_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="TIME or DURATION"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/bg_round"
            android:text="VENUE: "
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tvevent_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VENUE/LOCATION"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:padding="4dp"
            android:background="@drawable/bg_round"
            android:text="ABOUT THE EVENT: "
            android:textSize="17sp" />
        <TextView
            android:id="@+id/tvevent_purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="ABOUT EVENT"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"/>

    </LinearLayout>

</ScrollView>