<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#477871"
    tools:context=".amtc_UpEvents">

    <TextView
        android:id="@+id/evt_head"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="EVENTS"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#ebc20e"
        android:padding="20dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/novettxt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="NO EVENTS YET !!!"
        android:textColor="#fff"
        android:textSize="17dp"
        android:gravity="center"

        android:layout_below="@+id/evt_head"
        android:layout_margin="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler1View"
        android:layout_below="@+id/novettxt"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout >