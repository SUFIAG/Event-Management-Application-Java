<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbeec1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AmiVents"
            android:textColor="#000"
            android:textSize="50sp"
            android:padding="20dp"
            android:typeface="serif"
            android:textStyle="bold"
            android:background="#21917f"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/amity"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="19sp"
            android:layout_marginTop="5dp"
            android:textColor="#1c3752"
            android:text="Let's Go Beyond the horizons of Academics!"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/AmiVents"/>

    </LinearLayout>


</ScrollView>